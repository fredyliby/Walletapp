<div class="container">
	<div class="page-wrapper">
		<div class="row">
			<div class="col-md-12">
				<h1>New Credit Card</h1>
				<%= form_for @card do |f| %>
				<span><%= f.label :Creditcard %></span>
				<span><%= f.label :number %></span>
				<span><%= f.text_field :number %></span><br>
				<span><%= f.label :Expiration %></span>
				<span><%= f.label :month %></span>
				<span><%= f.text_field :month %></span><br>
				<span><%= f.label :Expiration %></span>
				<span><%= f.label :year %></span>
				<span><%= f.text_field :year %></span></br> 
				
				<%= f.submit 'Create Card', data: {disable_with: "Submitting..."} %><br>
				<% end %>
			</div>
		</div>
	</div>
</div>


